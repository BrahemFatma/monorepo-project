<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="PV_Reunion"
              pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <!-- Paramètres -->
    <parameter name="titre" class="java.lang.String"/>
    <parameter name="description" class="java.lang.String"/>
    <parameter name="date" class="java.lang.String"/>
    <parameter name="heure" class="java.lang.String"/>
    <parameter name="lieu" class="java.lang.String"/>
    <parameter name="pv" class="java.lang.String"/>
    <parameter name="documents" class="java.lang.String"/>
    <parameter name="userIds" class="java.util.List"/>
    <parameter name="participants" class="java.lang.String"/>
    <parameter name="LOGO_PATH" class="java.lang.String"/>

    <!-- Nouveaux paramètres -->
    <parameter name="type" class="java.lang.String"/>
    <parameter name="clientId" class="java.lang.String"/>
    <parameter name="dateFin" class="java.lang.String"/>
    <parameter name="heureFin" class="java.lang.String"/>
    <parameter name="dureePrevue" class="java.lang.String"/>
    <parameter name="dureeReelle" class="java.lang.String"/>
    <parameter name="actionMiseEnPlace" class="java.lang.String"/>
    <parameter name="descriptionAction" class="java.lang.String"/>

    <parameter name="dateAction" class="java.lang.String"/>
    <parameter name="responsableActionId" class="java.lang.String"/>
    <parameter name="clotureAction" class="java.lang.String"/>
    <parameter name="dateCloture" class="java.lang.String"/>

    <title>
        <band height="90">
            <image>
                <reportElement x="0" y="0" width="100" height="80"/>
                <imageExpression><![CDATA[new java.io.File($P{LOGO_PATH}).getAbsolutePath()]]></imageExpression>
            </image>
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Procès-verbal de Réunion]]></text>
            </staticText>
        </band>
    </title>

    <detail>
        <band height="520">
            <textField><reportElement x="0" y="0" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Titre : " + $P{titre}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="25" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Description : " + $P{description}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="50" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Date : " + $P{date}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="75" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Heure : " + $P{heure}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="100" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Lieu : " + $P{lieu}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="125" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Documents : " + $P{documents}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="150" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Participants : " + $P{participants}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="175" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Type : " + $P{type}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="200" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Client ID : " + $P{clientId}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="225" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Date Fin : " + $P{dateFin}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="250" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Heure Fin : " + $P{heureFin}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="275" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Durée prévue : " + $P{dureePrevue}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="300" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Durée réelle : " + $P{dureeReelle}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="325" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Action mise en place : " + $P{actionMiseEnPlace}]]></textFieldExpression></textField>

            <textField><reportElement x="0" y="350" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Date action : " + $P{dateAction}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="375" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Responsable action ID : " + $P{responsableActionId}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="400" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Clôture action : " + $P{clotureAction}]]></textFieldExpression></textField>
            <textField><reportElement x="0" y="425" width="555" height="20"/><textElement><font size="12" isBold="true"/></textElement><textFieldExpression><![CDATA["Date clôture : " + $P{dateCloture}]]></textFieldExpression></textField>
            <textField>
                <reportElement x="0" y="450" width="555" height="20"/>
                <textElement><font size="12" isBold="true"/></textElement>
                <textFieldExpression><![CDATA["Description action : " + $P{descriptionAction}]]></textFieldExpression>
            </textField>

        </band>
    </detail>
</jasperReport>
